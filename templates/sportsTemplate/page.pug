-const navClass = ["container","navbar"]
header(class=navClass)
  div(class="logo")
    -const logoSrc = page.commonHeader.logoSrc
    -const name = page.commonHeader.name
    img(src=logoSrc)
  span(style="color:white;") #{page.commonHeader.name}
  div(class="menu") 
    ul
      -const topHeaderLinks = page.commonHeader.TopheaderLinks
      each link in topHeaderLinks
        li 
          a(href=link.href) #{link.name} 
if page.header
  header(class=navClass style="background:red;")
    -const name = page.header.name
    span(style="color:white;font-weight:bold;margin-top:10px;position:absolute;") #{page.header.name}
    div(class="menu") 
      ul
        -const headerLinks = page.header.headerLinks
        each link in headerLinks
          li 
            a(href=link.href) #{link.name} 

-const contentClass = ["container","body-section"]
-const imgUrl = page.body.img
section(class=contentClass)
    h1 Basic Rules of #{page.body.bodyText}
    img(src=imgUrl alt="")
    ul
    -const rules = page.body.game_rules
    each rule in rules
        li= rule
